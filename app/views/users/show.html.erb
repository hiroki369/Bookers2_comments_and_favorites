<%= notice %>

<div class="container">
  <div class ="row">
    <div class = "col-xs-3">
     <%= render 'userinfo',user: @user,book: @book %>
     <div class ="col-xs-9">
      <h2>Books</h2>
      <table class ="table table-hover table-inverse">
        <tr>
         <th>Title</th>
         <th>Opinion</th>
       </tr>
       <tr>
         <% @user.books.each do |book| %>
         <td>
           <%= link_to book_path(book) do %>
           <%= book.title %>
           <% end %>
         </td>
         <td><%= book.body %></td>
       </tr>
       <% end %>
     </table>
